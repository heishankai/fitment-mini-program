{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types",
      "@types/wechat-miniprogram"
    ],
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "nativeTags": [
      "block",
      "component",
      "template",
      "slot",
      "view",
      "text",
      "image",
      "scroll-view",
      "swiper",
      "swiper-item",
      "movable-view",
      "movable-area",
      "cover-view",
      "cover-image",
      "icon",
      "progress",
      "rich-text",
      "button",
      "checkbox",
      "checkbox-group",
      "editor",
      "form",
      "input",
      "label",
      "picker",
      "picker-view",
      "radio",
      "radio-group",
      "slider",
      "switch",
      "textarea",
      "navigator",
      "audio",
      "camera",
      "live-player",
      "live-pusher",
      "map",
      "video",
      "open-data",
      "web-view",
      "ad",
      "page-meta",
      "match-media",
      "canvas"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
